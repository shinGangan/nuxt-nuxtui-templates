{
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "cSpell.userWords": ["nuxt", "tailwindcss", "reviewdog"],
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Conventional Commits 形式でコミットメッセージを英語で生成してください"
    }
  ],
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    {
      "file": ".copilot-pull-request-description-instructions.md"
    }
  ],
  "githubPullRequests.pullRequestDescription": "template",
  "githubPullRequests.assignCreated": "true"
}
